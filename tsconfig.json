{
    "compilerOptions": {
        "lib": [
            "ES2020",
            "DOM"
        ],
        "removeComments": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "sourceMap": true,
        "outDir": "lib",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitOverride": true,
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "Bundler",
        "jsx": "react" 
    },
    "exclude": [
        "node_modules/**/*",
        ".serverless/**/*",
        ".webpack/**/*",
        "_warmup/**/*",
        ".vscode/**/*",
        "webpack.config.cjs"
    ],
    "include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"]
}